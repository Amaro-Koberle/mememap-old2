datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Node {
  id        String      @id @default(uuid())
  createdAt DateTime @default(now())
  name     String
  content   String
  inLinks   NodeLink[]   @relation("inLinks")
  outLinks  NodeLink[]   @relation("outLinks")
}

// Calling the model NodeLink because the scaffold generator fails when this model is merely called Link
model NodeLink {
  id        String      @id @default(uuid())
  createdAt DateTime @default(now())
  name       String
  sourceNode   Node     @relation("outLinks", fields: [sourceNodeId], references: [id])
  sourceNodeId String
  targetNode   Node     @relation("inLinks", fields: [targetNodeId], references: [id])
  targetNodeId String
}
